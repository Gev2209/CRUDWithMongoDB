<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
        integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/stylesheets/user.css">
    <title>Document</title>
</head>

<body>

    <header>Profile /<a href="http://localhost:3000/">Home</a></header>
    <div class="all_cards">
        <ul class="profile_list">
            <li>
                <main class="profile">
                    <form action="" enctype="">
                        <input type="file" id="fileInput" style="display: none;" name="avatar">
                        <label for="fileInput" class="custom-file-label"><i class="fa-regular fa-circle-user"></i><a
                                class="plus"></label>
                        <button class="save_btn">Save</button>
                    </form>
                    </a>
                </main>
            </li>
            <li>Orders <i class="fa-solid fa-basket-shopping"></i></li>
            <li>Wallet <i class="fa-solid fa-wallet"></i></li>
            <li>Settings <i class="fa-solid fa-gear"></i></li>
            <li>Shopping <i class="fa-solid fa-cart-shopping"></i></li>
            <li>Contact Info <i class="fa-solid fa-address-card"></i></li>
        </ul>
        <div class="cart_user">
            <h1>CART</h1>
            <hr>
            <div class="inside_cart">
                <!--Order  -->
                <div class="list_order">
                    <div>
                        <ul class="order_lists">
                            <li class="photo orde_li"></li>
                            <li class="orde_li"><strong>Price:</strong> $1800</li>
                            <li class="orde_li"><strong>Quantity:</strong> 6 pcs</li>
                            <li class="orde_li"><strong>Date:</strong> 2025-09-26</li>
                            <li class="orde_li"><strong>Status:</strong> Delivered</li>
                        </ul>
                    </div>

                    <div>
                        <ul class="order_lists">
                            <li class="photo2 orde_li"></li>
                            <li class="orde_li"><strong>Price:</strong> $250</li>
                            <li class="orde_li"><strong>Quantity:</strong> 2 pcs</li>
                            <li class="orde_li"><strong>Date:</strong> 2025-11-33</li>
                            <li class="orde_li"><strong>Status:</strong> Pending</li>
                        </ul>
                    </div>

                    <div>
                        <ul class="order_lists">
                            <li class="photo3 orde_li"></li>
                            <li class="orde_li"><strong>Price:</strong> $2500</li>
                            <li class="orde_li"><strong>Quantity:</strong> 5 pcs</li>
                            <li class="orde_li"><strong>Date:</strong> 2025-012-05</li>
                            <li class="orde_li"><strong>Status:</strong> shipped</li>
                        </ul>
                    </div>
                </div>
                <!--Wallet  -->
                <div class="wallet_list">
                    <div class="balance-card">
                        <h2>Wallet Balance</h2>
                        <p>$245.50</p>
                        <button  class="deposit btn_wallet">Deposit</button>
                        <button class="withdraw btn_wallet">Withdraw</button>
                    </div>

                    <!-- Payment methods -->
                    <div class="methods">
                        <h3>Linked Cards</h3>
                        <ul>
                            <li>ðŸ’³ Visa **** 1234</li>
                            <li>ðŸ’³ MasterCard **** 5678</li>
                            <li><button class="btn_wallet">Add new card</button></li>
                        </ul>
                    </div>

                    <!-- Transaction history -->
                    <div class="history">
                        <h3>Transaction History</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2025-09-26</td>
                                    <td>Deposit</td>
                                    <td>+ $100</td>
                                    <td>Completed</td>
                                </tr>
                                <tr>
                                    <td>2025-09-20</td>
                                    <td>Purchase</td>
                                    <td>- $45</td>
                                    <td>Completed</td>
                                </tr>
                                <tr>
                                    <td>2025-09-15</td>
                                    <td>Withdrawal</td>
                                    <td>- $50</td>
                                    <td>Pending</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!--  -->
            </div>
        </div>
    </div>
    <script>
        const shoppingItem2 = document.querySelector('.profile_list li:nth-child(2)');
        const shoppingItem3 = document.querySelector('.profile_list li:nth-child(3)');
        const shoppingItem4 = document.querySelector('.profile_list li:nth-child(4)');
        const shoppingItem5 = document.querySelector('.profile_list li:nth-child(5)');
        const shoppingItem6 = document.querySelector('.profile_list li:nth-child(6)');
        const cartUser = document.querySelector('.cart_user');
        const insideCard = document.querySelector('.inside_cart');
        const list_order = document.querySelector('.list_order');
        const wallet_list = document.querySelector('.wallet_list');

        ///////////////////////////////////////////////////
        shoppingItem2.addEventListener('mouseenter', () => {
            cartUser.style.display = 'block';
            insideCard.style.backgroundColor = '#5b00ff4d'
            list_order.style.display = 'grid';
            wallet_list.style.display = 'none'
        });
        shoppingItem2.addEventListener('mouseleave', () => {
            cartUser.style.display = 'none';
        });
        ////////////////////////////////////////////////
        shoppingItem3.addEventListener('mouseenter', () => {
            cartUser.style.display = 'block';
            insideCard.style.backgroundColor = '#8000377a'
            list_order.style.display = 'none';
            wallet_list.style.display = 'grid'
        });
        shoppingItem3.addEventListener('mouseleave', () => {
            cartUser.style.display = 'none';
        });
        ////////////////////////////////////////////////
        shoppingItem4.addEventListener('mouseenter', () => {
            cartUser.style.display = 'block';
            insideCard.style.backgroundColor = '#c5c5c573'
            list_order.style.display = 'none';
            wallet_list.style.display = 'none'
        });
        shoppingItem4.addEventListener('mouseleave', () => {
            cartUser.style.display = 'none';
        });
        ///////////////////////////////////////////////////
        shoppingItem5.addEventListener('mouseenter', () => {
            cartUser.style.display = 'block';
            insideCard.style.backgroundColor = '#c5001a73'
            list_order.style.display = 'none';
            wallet_list.style.display = 'none'
        });
        shoppingItem5.addEventListener('mouseleave', () => {
            cartUser.style.display = 'none';
        });
        ////////////////////////////////////////////////////
        shoppingItem6.addEventListener('mouseenter', () => {
            cartUser.style.display = 'block';
            insideCard.style.backgroundColor = '#ff8d007a'
            list_order.style.display = 'none';
            wallet_list.style.display = 'none'
        });
        shoppingItem6.addEventListener('mouseleave', () => {
            cartUser.style.display = 'none';
        });
    </script>
</body>

</html>